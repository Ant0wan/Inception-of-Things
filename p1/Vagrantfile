# -*- mode: ruby -*-
# vi: set ft=ruby :

BOX_URL="http://cloud.centos.org/centos/8/x86_64/images/CentOS-8-Vagrant-8.1.1911-20200113.3.x86_64.vagrant-virtualbox.box"
ENV['VAGRANT_DEFAULT_PROVIDER'] = 'virtualbox'
VAGRANTFILE_API_VERSION = "2"

require 'yaml'
agent = YAML.load_file(File.join(File.dirname(__FILE__), "confs/agent.yaml"))
server = YAML.load_file(File.join(File.dirname(__FILE__), "confs/server.yaml"))

def provision_instance(config, yaml) #node_name, ipv4, type)
  config.vm.box = "centos/8"
  config.vm.box_url = BOX_URL
  config.vm.define yaml.fetch('node-name'), primary: true do |node|
    node.vm.hostname = yaml.fetch('node-name')
    config.vm.provider "virtualbox" do |vb|
      vb.memory = "512"
      vb.cpus = "1"
      vb.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
      vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
    end
    node.vm.network "private_network", ip: yaml.fetch('bind-address')
    if yaml.fetch('exec') == "server"
      node.vm.provision "shell", path: "./scripts/k3s.sh", args: [yaml.fetch('exec')]
    else
      node.vm.provision "shell", path: "./scripts/k3s.sh", args: [yaml.fetch('exec'), yaml.fetch('server')]
    end
    node.vm.synced_folder ".", "/vagrant", type: "nfs"
  end
end

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vbguest.auto_update = false
  provision_instance(config, server)
  provision_instance(config, agent)
end
