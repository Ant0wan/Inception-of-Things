# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "centos/8"

  config.vm.define "abarthelS" do |abarthelS|
    abarthelS.vm.hostname = "abarthelS"
    abarthelS.vm.network "public_network", ip: "192.168.42.110"
    abarthelS.vm.provider "virtualbox" do |v|
      v.memory = "512"
      v.cpus = "1"
      v.provision :shell, path: "server.sh"
    end
  end

  config.vm.define "abarthelSW" do |abarthelSW|
    abarthelSW.vm.hostname = "abarthelSW"
    abarthelSW.vm.provision :shell, path: "serverworker.sh"
    abarthelSW.vm.network "public_network", ip: "192.168.42.111"
    abarthelSW.vm.provider "virtualbox" do |v|
      v.memory = "512"
      v.cpus = "1"
      v.provision :shell, path: "serverworker.sh"
    end
  end

end
