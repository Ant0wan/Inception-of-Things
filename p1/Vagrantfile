# -*- mode: ruby -*-
# vi: set ft=ruby :

ENV['VAGRANT_DEFAULT_PROVIDER'] = 'virtualbox'
VAGRANTFILE_API_VERSION = "2"
BOX_URL="http://cloud.centos.org/centos/8/x86_64/images/CentOS-8-Vagrant-8.1.1911-20200113.3.x86_64.vagrant-virtualbox.box"

def provision_instance(config, node_name, ipv4, type)
  config.vm.box = "centos/8"
  config.vm.box_url = BOX_URL
  config.vm.define node_name, primary: true do |node|
    node.vm.hostname = node_name
    config.vm.provider "virtualbox" do |vb|
      vb.memory = "512"
      vb.cpus = "1"
      vb.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
      vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
    end
    node.vm.network "private_network", ip: ipv4
    node.vm.provision "shell", path: "./scripts/k3s.sh", args: [type]
    node.vm.synced_folder ".", "/vagrant", type: "nfs"
  end
end

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vbguest.auto_update = false
  provision_instance(config, "abarthelS", "192.168.42.110", "server")
  #provision_instance(config, "abarthelSW", "192.168.42.111", "agent")
end
